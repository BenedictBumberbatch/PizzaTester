public class Pizza
{
    private String type;
    private String toppings;
    private String size;
    
    public Pizza(String theType, String theToppings, String theSize){
        type = theType;
        toppings = theToppings;
        size = theSize;
    }
    
    public String toString()
    {
        return "An " + size + " " + type + " pizza with " + toppings + ".";
    }
    
}
